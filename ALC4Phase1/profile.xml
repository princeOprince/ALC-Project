<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/alc_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="My Profile"
        app:titleTextAppearance="@style/TitleBarTextAppearance" />

    <ImageView
        android:id="@+id/prince"
        android:layout_width="183dp"
        android:layout_height="205dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/alc_bar"
        app:layout_constraintStart_toStartOf="@+id/alc_bar"
        app:layout_constraintTop_toBottomOf="@+id/alc_bar"
        app:srcCompat="@drawable/p2" />

    <TextView
        android:id="@+id/name"
        android:layout_width="264dp"
        android:layout_height="33dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/image"
        android:textAlignment="center"
        android:textColor="#737373"
        android:textSize="30sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/prince"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/prince"
        app:layout_constraintTop_toBottomOf="@+id/prince" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/track"
        android:layout_width="193dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/track"
        android:textAlignment="viewStart"
        android:textColor="#737373"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/divider"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/country"
        android:layout_width="207dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/country"
        android:textAlignment="viewStart"
        android:textColor="#737373"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/track"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/track"
        app:layout_constraintTop_toBottomOf="@+id/track" />

    <TextView
        android:id="@+id/email"
        android:layout_width="337dp"
        android:layout_height="29dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/email"
        android:textAlignment="viewStart"
        android:textColor="#737373"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/country"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/country"
        app:layout_constraintTop_toBottomOf="@+id/country" />

    <TextView
        android:id="@+id/number"
        android:layout_width="349dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/phone"
        android:textAlignment="viewStart"
        android:textColor="#737373"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/slack"
        android:layout_width="310dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/slack"
        android:textAlignment="textStart"
        android:textColor="#737373"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

</android.support.constraint.ConstraintLayout>